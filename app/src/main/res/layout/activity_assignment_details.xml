<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/background">

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    tools:context=".Activity.AssignmentDetails"

    >
    <androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="#fff"
        app:cardCornerRadius="10dp"
        android:layout_margin="16dp"
        app:contentPadding="16dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Module Code"
        android:id="@+id/module_code"
        android:gravity="center"
        android:textColor="#000"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Module Name"
        android:id="@+id/module_name"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:textColor="#000"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Assignment N0"
        android:id="@+id/assignment_no"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:textColor="#000"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Assignment Description"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:id="@+id/assignment_desc"
        android:textColor="#000"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:id="@+id/assignment_file"
        android:textColor="#0D47A1"
        android:cursorVisible="true"
       android:textStyle="bold"
        android:textSize="20dp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Assignment Deadline"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:id="@+id/assignment_deadline"
        android:textColor="#000"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Assignment Publish Date"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:id="@+id/assignment_publish_date"
        android:textColor="#000"/>
    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Add Submission"
        android:background="@drawable/btnsuccess"
        android:layout_marginTop="10dp"
        android:id="@+id/btn_addSubmission"
        android:textColor="#fff"
        android:layout_gravity="center"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>
</ScrollView>