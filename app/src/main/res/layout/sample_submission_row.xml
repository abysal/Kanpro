<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >
    <androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="#fff"
        app:cardCornerRadius="10dp"
        android:layout_margin="5dp"
        app:contentPadding="10dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">



            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Assignment Title"
                android:gravity="center"
                android:id="@+id/assignment_title_1"
                android:textStyle="bold"
                android:textColor="#000"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Assignment Links"
                android:gravity="center"
                android:layout_marginTop="5dp"
                android:id="@+id/assignment_links_1"
                android:textColor="#000"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Assignment File"
                android:gravity="center"
                android:layout_marginTop="5dp"
                android:id="@+id/assignment_file_user_1"
                android:textColor="#2962FF"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Submitted Date"
                android:gravity="center"
                android:layout_marginTop="5dp"
                android:id="@+id/assignment_submitted_date_1"
                android:textColor="#000"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                >


            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Edit"
                android:background="@drawable/btn_box"
                android:layout_marginTop="10dp"
                android:textColor="#00C853"
                android:id="@+id/btn_edit_submission"
                android:textStyle="bold"
                android:pointerIcon="hand"
                android:padding="15dp"
                android:layout_margin="5dp"
                android:layout_gravity="center"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Delete"
                android:background="@drawable/btn_box_red"
                android:layout_marginTop="10dp"
                android:textColor="#DD2C00"
                android:layout_margin="5dp"
                android:id="@+id/btn_delete_submission"
                android:textStyle="bold"
                android:pointerIcon="hand"
                android:padding="15dp"
                android:layout_gravity="center"/>
            </LinearLayout>
        </LinearLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>
