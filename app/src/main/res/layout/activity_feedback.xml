<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.FeedbackActivity"
    android:orientation="vertical"
    android:background="@drawable/background">
    <androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardBackgroundColor="#fff"
        app:cardCornerRadius="10dp"
        android:layout_margin="16dp"
        app:contentPadding="16dp"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="8dp"
            >

            <TextView
                android:id="@+id/page_heading"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="POST FEEDBACK"
                android:textColor="#000"
                android:textSize="25sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/et_feedback"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/page_heading"
                android:layout_marginTop="10dp"
                android:background="@drawable/input_rectangle_box"
                android:hint="Enter Your Feedback"
                android:lines="5"
                android:paddingLeft="10dp"

                android:textColor="#000"
                android:textColorHint="#000"
                />


            <Button
                android:id="@+id/btn_submit_feedback"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/btnsuccess"
                android:layout_alignParentBottom="true"
                android:text="Submit"
                android:textColor="#fff" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>